{
    "name": "midhunmonachan/deploymate-laravel",
    "description": "Laravel 12 dev-only package that generates and validates a minimal deploy.yaml manifest for deploymate.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "illuminate/console": "^12.0",
        "illuminate/support": "^12.0",
        "laravel/prompts": "^0.3",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Midhunmonachan\\DeploymateLaravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Midhunmonachan\\DeploymateLaravel\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Midhunmonachan\\DeploymateLaravel\\DeploymateServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "composer-validate": "composer validate --strict",
        "ci": [
            "@composer-validate",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
